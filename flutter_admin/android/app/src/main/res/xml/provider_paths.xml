    <external-files-path 
        name="external_files" 
        path="." />
    
    <!-- Path untuk external cache directory -->
    <external-cache-path 
        name="external_cache" 
        path="." />
    
    <!-- Path untuk internal cache directory -->
    <cache-path 
        name="cache" 
        path="." />
    
    <!-- Path untuk internal files directory -->
